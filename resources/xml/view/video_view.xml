<brls:Box
    width="100%"
    height="100%"
    axis="column"
    justifyContent="spaceBetween"
    alignItems="center">

    <brls:Box
        id="video/osd/top/box"
        width="100%"
        height="80"
        backgroundStartColor="#000000CC"
        backgroundEndColor="#00000000"
        background="vertical_linear">
        <brls:Label
            id="video/osd/title"
            height="100%"
            marginLeft="20"
            marginRight="120"
            singleLine="true"
            textColor="#FFFFFF" />

        <brls:Box
            wireframe="false"
            id="video/osd/setting"
            hideClickAnimation="true"
            positionType="absolute"
            positionRight="10"
            positionTop="10"
            alignItems="center"
            justifyContent="center"
            height="60"
            width="60">
            <SVGImage
                id="video/osd/setting/icon"
                focusable="true"
                focusUp="video/osd/setting/icon"
                focusLeft="video/osd/toggle/icon"
                focusRight="video/osd/setting/icon"
                focusDown="video/osd/bottom/box"
                hideHighlightBackground="true"
                highlightCornerRadius="30"
                height="30"
                width="30"
                svg="@res/icon/ico-setting.svg" />
        </brls:Box>

    </brls:Box>

    <brls:Box
        axis="column"
        alignItems="center"
        id="video/osd/center/box">
        <brls:ProgressSpinner
            id="video/osd/loading"
            width="100"
            height="100" />
        <brls:Label
            id="video/osd/center/label"
            visibility="invisible"
            cornerRadius="4"
            backgroundColor="#303030A0"
            textColor="#FFFFFF"
            fontSize="16"
            height="16"
            horizontalAlign="center"
            verticalAlign="center" />
    </brls:Box>

    <brls:Box
        id="video/osd/bottom/box"
        width="100%"
        height="120"
        alignItems="center"
        axis="row"
        background="vertical_linear">

        <brls:Box
            id="video/osd/toggle"
            wireframe="false"
            focusable="true"
            focusUp="video/osd/setting"
            focusLeft="video/osd/toggle"
            focusRight="video/osd/icon/box"
            hideHighlightBackground="true"
            highlightCornerRadius="100"
            alignItems="center"
            justifyContent="center"
            marginLeft="20"
            marginBottom="20"
            height="100"
            width="100">
            <SVGImage
                id="video/osd/toggle/icon"
                wireframe="false"
                height="100"
                width="100"
                svg="@res/icon/ico-play.svg" />
        </brls:Box>

        <brls:Box
            width="auto"
            grow="1"
            height="130"
            axis="column">
            <VideoProgressSlider
                focusable="false"
                id="video/osd/bottom/progress"
                width="100%"
                height="50"
                marginTop="10"
                grow="1" />
        </brls:Box>
    </brls:Box>

</brls:Box>