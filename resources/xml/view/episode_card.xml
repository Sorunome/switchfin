<brls:Box
    highlightCornerRadius="8"
    padding="5">

    <brls:Box
        axis="row"
        alignItems="center"
        width="300"
        height="100%">
        <brls:Image
            id="video/card/picture"
            backgroundColor="@theme/color/grey_1"
            scalingType="fit"
            image="@res/img/video-card-bg.png"/>
    </brls:Box>

    <brls:Box
        axis="column"
        marginLeft="20">
        <brls:Label
            id="episode/card/name"
            singleLine="true"
            marginTop="10"
            marginBottom="10"
            fontSize="18" />

        <brls:Label
            id="episode/card/overview"
            fontSize="15"
            textColor="@theme/font/grey" />
    </brls:Box>

</brls:Box>